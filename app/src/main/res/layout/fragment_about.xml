<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="buu.informatics.c59160130.miniproject02.aboutFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg01">

        <TextView
                android:id="@+id/titleAbout_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="112dp"
                android:text="@string/about_textView"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/about_textView01"
                android:layout_width="284dp"
                android:layout_height="115dp"
                android:layout_marginTop="20dp"
                android:text="แอพพลิเคชั่น Herbs เป็นแอพที่รวบรวมพืชสมุนไพรประจำบ้าน และพืชสมุนไพรชนิดอื่นๆ เพื่อบำบัดโรค บำรุง ร่างกาย สามารถนำความรู้ไปใช้ในชีวิตประจำวันได้"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleAbout_textView" />

        <TextView
                android:id="@+id/about_textView02"
                android:layout_width="282dp"
                android:layout_height="84dp"
                android:layout_marginTop="12dp"
                android:text="คุณสมบัติของแอพ คือ สามารถใช้งานแบบออฟไลน์ได้, เป็นแอพที่ไม่เสียค่าใช้จ่าย"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_textView01" />

        <TextView
                android:id="@+id/about_textView03"
                android:layout_width="289dp"
                android:layout_height="56dp"
                android:freezesText="true"
                android:text="แอพพลิเคชั่น Herbs พัฒนาโดย นางสาววัชราภรณ์ บุตรสา"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="11sp"
                app:autoSizeTextType="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.483"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_textView02"
                app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>