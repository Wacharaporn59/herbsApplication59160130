<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="buu.informatics.c59160130.miniproject02.herbsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/herbs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg01">


        <TextView
                android:id="@+id/herbs_textView02"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="8dp"
                android:text="พืชสมุนไพร3"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <Button
                android:id="@+id/diseaseType_button03"
                android:layout_width="207dp"
                android:layout_height="55dp"
                android:text="กลุ่มอาการ"
                app:layout_constraintBaseline_toBaselineOf="@+id/homeHerb_button02"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/homeHerb_button02"
                tools:ignore="MissingConstraints" />

        <Button
                android:id="@+id/homeHerb_button02"
                android:layout_width="205dp"
                android:layout_height="57dp"
                android:layout_marginTop="50dp"
                android:text="สมุนไพรประจำบ้าน"
                app:layout_constraintEnd_toStartOf="@+id/diseaseType_button03"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/herbs_textView02"
                tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/herbsList01"
                android:layout_width="395dp"
                android:layout_height="392dp"
                app:layout_constraintTop_toBottomOf="@+id/homeHerb_button02"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>